# Application Configuration
DCE_VERSION=0.1.0
DCE_ENVIRONMENT=development
DCE_LOG_LEVEL=debug

# Server Configuration
DCE_SERVER_PORT=8080
DCE_SERVER_GRPC_PORT=9090

# Database Configuration
DCE_DATABASE_URL=postgres://postgres:password@localhost:5432/dce_dev?sslmode=disable
DCE_DATABASE_MAX_OPEN_CONNS=25
DCE_DATABASE_MAX_IDLE_CONNS=5

# Redis Configuration
DCE_REDIS_URL=localhost:6379
DCE_REDIS_PASSWORD=
DCE_REDIS_DB=0

# Message Queue Configuration
DCE_KAFKA_BROKERS=localhost:9092
DCE_KAFKA_GROUP_ID=dce-backend

# Telephony Configuration
DCE_TELEPHONY_SIP_PROXY=sip.example.com:5060
DCE_TELEPHONY_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# Compliance Configuration
DCE_COMPLIANCE_TCPA_ENABLED=true
DCE_COMPLIANCE_GDPR_ENABLED=true

# Security Configuration
DCE_SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-in-production
DCE_SECURITY_TOKEN_EXPIRY=24h
DCE_SECURITY_RATE_LIMIT_REQUESTS_PER_SECOND=100
DCE_SECURITY_RATE_LIMIT_BURST_SIZE=200